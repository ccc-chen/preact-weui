    .weui-cells.weui-cells_radio
      label.weui-cell.weui-check__label
        .weui-cell__bd
          p cell standard
                        
        .weui-cell__ft
          input#x11.weui-check(type="radio", name="radio1")
                             
          span.weui-icon-checked
                 
      label.weui-cell.weui-check__label
        .weui-cell__bd
          p cell standard
                       
