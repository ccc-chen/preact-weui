    .weui-cells
      .weui-cell.weui-cell_select
        .weui-cell__bd
          select.weui-select(name="select1")
            option(selected="", value="1") 微信号
                               
            option(value="2") QQ号
                               
            option(value="3") Email
              
      .weui-cell.weui-cell_select.weui-cell_select-after
