          p standard is dealicient for u.
                
      a.weui-cell.weui-cell_link
        .weui-cell__bd 添加更多
       
    .weui-cells__title 表单
     
    .weui-cells.weui-cells_form
      .weui-cell
        .weui-cell__hd
          label.weui-label qq
           
        .weui-cell__bd
          input.weui-input(type="number",  placeholder="请输入qq号")
        
      .weui-cell.weui-cell_vcode
        .weui-cell__hd
          label.weui-label 手机号
                      
        .weui-cell__bd
          input.weui-input(type="tel", placeholder="请输入手机号")
                  
        .weui-cell__ft
          button.weui-vcode-btn 获取验证码
            
      .weui-cell
        .weui-cell__hd
          label.weui-label 日期
                 
        .weui-cell__bd
          input.weui-input(type="date", value="")
            
      .weui-cell
        .weui-cell__hd
          label.weui-label 时间
                 
        .weui-cell__bd
          input.weui-input(type="datetime-local", value="", placeholder="")
            
      .weui-cell.weui-cell_vcode
        .weui-cell__hd
          label.weui-label 验证码
                   
        .weui-cell__bd
          input.weui-input(type="number", placeholder="请输入验证码")
                    
        .weui-cell__ft
          img.weui-vcode-img(src="../../../images/vcode.jpg")
         
    .weui-cells__tips 底部说明文字底部说明文字
        
    .weui-cells__title 表单报错
       
    .weui-cells.weui-cells_form
      .weui-cell.weui-cell_warn
        .weui-cell__hd
          label.weui-label(for="") 卡号
                    
        .weui-cell__bd
          input.weui-input(type="number", value="weui input error", placeholder="请输入卡号")
                   
        .weui-cell__ft
          i.weui-icon-warn
       
    .weui-cells__title 开关
       
    .weui-cells.weui-cells_form
      .weui-cell.weui-cell_switch
        .weui-cell__bd 标题文字
                  
        .weui-cell__ft
          input.weui-switch(type="checkbox")
             
      .weui-cell.weui-cell_switch
        .weui-cell__bd 兼容IE Edge的版本
                   
        .weui-cell__ft
          label.weui-switch-cp
            input#switchCP.weui-switch-cp__input(type="checkbox", checked="checked")
                                
            .weui-switch-cp__box
        
    .weui-cells__title 文本框
       
    .weui-cells
      .weui-cell
        .weui-cell__bd
          input.weui-input(type="text", placeholder="请输入文本")
    
    .weui-cells__title 文本域
       
    .weui-cells.weui-cells_form
      .weui-cell
        .weui-cell__bd
          textarea.weui-textarea(placeholder="请输入文本", rows="3")
                       
          .weui-textarea-counter
            span 0
            | /200
         
    .weui-cells__title 选择
     
    .weui-cells
      .weui-cell.weui-cell_select.weui-cell_select-before
        .weui-cell__hd
          select.weui-select(name="select2")
            option(value="1") +86
                               
            option(value="2") +80
                               
            option(value="3") +84
                                 
            option(value="4") +87
                   
        .weui-cell__bd
          input.weui-input(type="number",  placeholder="请输入号码")
     
