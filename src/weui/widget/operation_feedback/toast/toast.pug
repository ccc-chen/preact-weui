.page.js_show.toast

  .page__hd
    h1.page__title Toast      
    p.page__desc 弹出式提示
  
  .page__bd.page__bd_spacing
    a.weui-btn.weui-btn_default 成功提示
    a.weui-btn.weui-btn_default 加载中提示
  
  .page__ft
    a
      img(src="./images/icon_footer_link.png")
      
  // BEGIN toast
  #toast(
		style="display: none;"
	)
    .weui-mask_transparent    
    .weui-toast
      i.weui-icon-success-no-circle.weui-icon_toast           
      p.weui-toast__content 已完成

  // end toast
  // loading toast
  #loadingToast(
		style="display:none;"
	)
    .weui-mask_transparent   
    .weui-toast
      i.weui-loading.weui-icon_toast          
      p.weui-toast__content 数据加载中


